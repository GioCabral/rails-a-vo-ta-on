<div class="container">
  <div class="row">
    <div class="col-6" >
      <div class="message_container">
        <div class="messages">
          <% if @chatroom.messages.length < 1 %>
            <div class="message">
              <p>Nada de mensagens</p>
            </div>
          <% else %>
            <% @chatroom.messages.each do |message| %>
              <% user = User.find(message.user_id) %>
              <div id="message-info<%= message.user == current_user ? "my" : "message" %>">
                <small>
                  <strong><%= user.name %></strong>
                  <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
                </small>
              </div>
              <div id="message-<%= message.user == current_user ? "my" : "message" %>">
                <% if message.user == current_user %>
                    <p><%= message.content %></p>
                    <%= cl_image_tag message.user.photo.key, class:"avatar"%>
                  <% else %>
                    <%= cl_image_tag message.user.photo.key, class:"avatar"%>
                    <p><%= message.content %></p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="form_message">
          <%= simple_form_for [@chatroom, @message],html: {class: "d-flex"} do |f|%>
            <%= f.input :content,
              label: false,
              placeholder: "Message",
              wrapper_html: {class: "flex-grow-1"}
            %>
            <%= f.submit "Send", class: "btn btn-primary mb-3" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-6"></div>
  </div>
</div>
