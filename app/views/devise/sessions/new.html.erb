<div class="container_register">
 <div class="register justify-content-center">

    <div class="register_content">

      <div class="register_title">
        <h2>Fa√ßa seu login</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: 'E-mail',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: 'Senha',
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: 'Lembrar login' , as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary btn-login", id:"all_width", label:"Entrar" %>
        </div>
      <% end %>
      <hr>
      <div class="redirect-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>


  </div>
</div>
